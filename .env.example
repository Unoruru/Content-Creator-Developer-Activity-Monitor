# Required: URL of the page to monitor
MONITOR_URL=https://example.com/developer/profile

# Optional: CSS selector to monitor specific element (leave empty for full page)
CHECK_SELECTOR=

# Required: Email configuration
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com
EMAIL_PASSWORD=your-gmail-app-password

# Optional: SMTP settings (defaults shown)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=465

# Optional: Hash storage path (default: last_hash.txt)
HASH_STORAGE_PATH=last_hash.txt
